@using FormFactory
@model PropertyVm
           
@{
    var enumType = Model.Value.GetType();
    var displayValue = Enum.Parse(enumType, Model.Value.ToString());
 }
<select name="@Model.Name" @(Model.IsWritable ? "" : "disabled=disabled")>
    @foreach (var enumMember in Enum.GetValues(enumType))
    {
        var selected = (displayValue == enumMember);
        <option value="@enumMember.ToString()" @(selected ? "selected=selected" : "")>@enumMember.ToString().Sentencise()</option>    
    }
</select>

