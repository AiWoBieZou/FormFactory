@using FormFactory
@model PropertyVm
           
@{ var value = Model.Value as bool? ?? false;
}
<input type='hidden' value='@value.ToString().ToLower()' id="@Model.Name" name='@Model.Name'>
<input class="@(Model.IsWritable ? "" : "disabled")" type="checkbox" value="true" @(value ? "checked=checked" : "") onchange="javascript: $('#@Model.Name').val($(this).is(':checked'))" @(Model.IsWritable ? "" : "disabled=\"disabled\"")/>
